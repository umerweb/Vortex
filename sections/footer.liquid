<section class="footersection">
  <div class="footer-main">
    <div class="form-footer">
      <p>
        Sign up for early access, news<br>
        and exclusive offers
      </p>
      {% form 'contact' %}
        {{ form.errors | default_errors }}
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="✓">

        <label for="contact_email">Email Address</label>
        <input type="email" id="contact_email" name="contact[email]" placeholder="Your Email" required>
        <div id="spacer"></div>

        <button type="submit" class="btns">Subscribe</button>
      {% endform %}
    </div>

    <div class="footer-links-main">
      <div class="footer-links">
        <span class="pheader">{{ section.settings.footerheading1 }}</span>
        <span class="linkclass">{{  section.settings.footerlink1label }}</span>
        <span class="linkclass">{{  section.settings.footerlink2label }}</span>
        <span class="linkclass">{{  section.settings.footerlink3label }}</span>
      </div>
      <div class="footer-links">
        <span class="pheader">{{ section.settings.footerheading2 }}</span>
        <span class="linkclass">{{  section.settings.footerlink4label }}</span>
        <span class="linkclass">{{  section.settings.footerlink5label }}</span>
        <span class="linkclass">{{  section.settings.footerlink6label }}</span>
      </div>
      <div class="footer-links-social">
        <span class="pheader">{{ section.settings.footerheading3 }}</span>
        <div>
       <a href="{{ section.settings.sociallinks1 }}"> <i class="fa-brands fa-facebook"></i></a>
       <a href="{{ section.settings.sociallinks2 }}"> <i class="fa-brands fa-instagram"></i></a></div>
      </div>
    </div>
  </div>

  <div class="footer-main2">
    <div class="linksides">
     
      <div id="hr"></div>
      <div class="copyright">
    <span>{{ section.settings.copyrighttext }}</span></div>
      
    </div>

  
  </div>
</section>

