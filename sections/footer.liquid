      "default": "Tisd-Fred: 12-18"
    },
   
    {
        "type": "text",
      "id": "footerlink3label",
      "label": "Date",
      "default": "Lörd: 11-14"
    },
   
    {
        
        "type": "text",
        "id": "footerheading2",
        "label": " Link Heading 2",
        "default": "Kontakta oss"
      },
      {
        "type": "text",
      "id": "footerlink4label",
      "label": "Email 1",
      "default": "butik@mystorevortex.se"
    },
   
    {
        "type": "text",
      "id": "footerlink5label",
