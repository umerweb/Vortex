<div class="main-login">


  <div class="all-forms">

<div id="login-form">
  <h1>Login To Our Store</h1>
  {% form 'customer_login' %}
    {{ form.errors | default_errors }}
  
    <div class="connn">
      <label for="email">Email</label>
      <input type="email" name="customer[email]" placeholder="Enter Your Email">
    </div>
  
    <div class="connn">
      <label for="password">Password</label>
      <input type="password" name="customer[password]" placeholder="Enter Your Password">
    </div>
  
    <div class="submit2">
      <input type="submit" value="Sign in"> <a href="https://mystoregrit24.myshopify.com/account/register">Make a New Account</a>

    </div>
  {% endform %}
  <a href="#" id="forgot-password-link">Forgot Password?</a>
   

</div>

<div id="forgot-password-form" style="display: none;">
  {% form 'recover_customer_password' %}
    {{ form.errors | default_errors }}
  
    <div class="email frla">
      <h2>Enter Your Eamil</h2>
      <label for="email" ></label>
      <input type="email" id="frla" name="email" placeholder="Enter Your Email">
    </div>
  
    <div class="submit">
      <input type="submit" value="Submit">
    </div>
  {% endform %}
   
  <a href="#" id="return-to-login">Return to Login</a>

</div>

</div>

<div class="login-image">



</div>

</div>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const loginForm = document.getElementById("login-form");
    const forgotPasswordForm = document.getElementById("forgot-password-form");
    const forgotPasswordLink = document.getElementById("forgot-password-link");
    const returnToLoginLink = document.getElementById("return-to-login");

    forgotPasswordLink.addEventListener("click", function(event) {
      event.preventDefault();
      loginForm.style.display = "none";
      forgotPasswordForm.style.display = "block";
    });

    returnToLoginLink.addEventListener("click", function(event) {
      event.preventDefault();
      forgotPasswordForm.style.display = "none";
      loginForm.style.display = "block";
    });
  });
</script>
